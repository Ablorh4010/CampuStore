# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Stripe Configuration (get these from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Vite Environment Variables (used by client)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key_here

# Meta WhatsApp Business API Configuration
# Get these from https://developers.facebook.com/apps
# 1. Create an app and add WhatsApp product
# 2. Get Phone Number ID from WhatsApp > API Setup
# 3. Generate permanent access token from Business Settings > System Users
META_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
META_WHATSAPP_ACCESS_TOKEN=your_permanent_access_token_here
META_WHATSAPP_API_VERSION=v18.0

# Session Secret (generate a random string)
SESSION_SECRET=your_random_session_secret_here

# Resend API Key for Email (get from https://resend.com)
RESEND_API_KEY=re_your_resend_api_key_here
